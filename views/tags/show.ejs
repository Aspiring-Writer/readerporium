<h2><%= tag.name %></h2>

<% if (user.role = "admin") { %>
<div class="row">
  <div class="offset-by-eight two columns">
    <a class="button" href="/tags/<%= tag.id %>/edit">
      <i class="fa-solid fa-pen fa-lg"></i>
    </a>
  </div>
  <div class="two columns">
    <%- include('../partials/deleteForm', { url: `/tags/${tag.id}` }) %>
  </div>
</div>
<% } %> <% if (booksWithTag.length > 0) { %>
<h3>Books with Tag</h3>
<% booksWithTag.forEach(book => { %>
<a class="cover" href="/books/<%= book.id %>">
  <img src="<%= book.coverImagePath %>" alt="cover" <% if (book.accessLevel ==
  4) { %>class="blur"<% } %> />
</a>
<% }) %> <% } %>
